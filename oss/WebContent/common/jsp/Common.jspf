<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN">
<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/fmt" prefix="fmt"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c"%>

<!-- Flush buffer before setting locale to ensure encoding is preserved -->
<% response.flushBuffer(); %>
<fmt:setLocale value="${locale}"/>

<c:set var="txtPath" value="../txt" />
<c:set var="htmlPath" value="${ossPrefix}/html" />
<c:set var="jsPath" value="${ossPrefix}/js" />
<c:set var="cssPath" value="${ossPrefix}/css" />
<c:set var="imagesPath" value="${ossPrefix}/images" />
<c:set var="titlesPath" value="${ossPrefix}/titles" />
<c:set var="ccsPath" value="${EXT_CONTENT_PREFIX_URL}" />
